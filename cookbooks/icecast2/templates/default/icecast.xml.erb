<icecast>
    <!-- location and admin are two arbitrary strings that are e.g. visible
         on the server info page of the icecast web interface
         (server_version.xsl). -->
    <location><%= node['icecast']['location'] %></location>
    <admin><%= node['icecast']['admin'] %></admin>

    <limits>
      <clients><%= node['icecast']['limits']['clients'] %></clients>
        <sources><%= node['icecast']['limits']['sources'] %></sources>
        <threadpool><%= node['icecast']['limits']['threadpool'] %></threadpool>
        <queue-size><%= node['icecast']['limits']['queue-size'] %></queue-size>
        <client-timeout><%= node['icecast']['limits']['client-timeout'] %></client-timeout>
        <header-timeout><%= node['icecast']['limits']['header-timeout'] %></header-timeout>
        <source-timeout><%= node['icecast']['limits']['source-timeout'] %></source-timeout>
        <burst-on-connect><%= node['icecast']['limits']['burst-on-connect'] %></burst-on-connect>
        <burst-size><%= node['icecast']['limits']['burst-size'] %></burst-size>
    </limits>

    <authentication>
        <source-password><%= node['icecast']['authentication']['source-password'] %></source-password>
        <relay-password><%= node['icecast']['authentication']['relay-password'] %></relay-password>
        <admin-user><%= node['icecast']['authentication']['admin-user'] %></admin-user>
        <admin-password><%= node['icecast']['authentication']['admin-password'] %></admin-password>
    </authentication>

    <!-- set the mountpoint for a shoutcast source to use, the default if not
         specified is /stream but you can change it here if an alternative is
         wanted or an extension is required
    <shoutcast-mount>/live.nsv</shoutcast-mount>
    -->

    <!-- Uncomment this if you want directory listings -->
    <!--
    <directory>
        <yp-url-timeout>15</yp-url-timeout>
        <yp-url>http://dir.xiph.org/cgi-bin/yp-cgi</yp-url>
    </directory>
     -->

    <!-- This is the hostname other people will use to connect to your server.
    It affects mainly the urls generated by Icecast for playlists and yp
    listings. -->
    <hostname><%= node['icecast']['hostname'] %></hostname>

    <listen-socket>
      <port><%= node['icecast']['listen-socket']['port'] %></port>
        <!-- <bind-address>127.0.0.1</bind-address> -->
        <!-- <shoutcast-mount>/stream</shoutcast-mount> -->
    </listen-socket>
    <!--
    <listen-socket>
        <port>8001</port>
    </listen-socket>
    -->

    <!--<master-server>127.0.0.1</master-server>-->
    <!--<master-server-port>8001</master-server-port>-->
    <!--<master-update-interval>120</master-update-interval>-->
    <!--<master-password>hackme</master-password>-->

    <!-- setting this makes all relays on-demand unless overridden, this is
         useful for master relays which do not have <relay> definitions here.
         The default is 0 -->
    <!--<relays-on-demand>1</relays-on-demand>-->

    <!--
    <relay>
        <server>127.0.0.1</server>
        <port>8001</port>
        <mount>/example.ogg</mount>
        <local-mount>/different.ogg</local-mount>
        <on-demand>0</on-demand>

        <relay-shoutcast-metadata>0</relay-shoutcast-metadata>
    </relay>
    -->

    <!-- Only define a <mount> section if you want to use advanced options,
         like alternative usernames or passwords
    <mount>
        <mount-name>/example-complex.ogg</mount-name>

        <username>othersource</username>
        <password>hackmemore</password>

        <max-listeners>1</max-listeners>
        <dump-file>/tmp/dump-example1.ogg</dump-file>
        <burst-size>65536</burst-size>
        <fallback-mount>/example2.ogg</fallback-mount>
        <fallback-override>1</fallback-override>
        <fallback-when-full>1</fallback-when-full>
        <intro>/example_intro.ogg</intro>
        <hidden>1</hidden>
        <no-yp>1</no-yp>
        <authentication type="htpasswd">
                <option name="filename" value="myauth"/>
                <option name="allow_duplicate_users" value="0"/>
        </authentication>
        <on-connect>/home/icecast/bin/stream-start</on-connect>
        <on-disconnect>/home/icecast/bin/stream-stop</on-disconnect>
    </mount>

    -->

    <% node['icecast']['mounts'].each do |mount| %>
      <mount>
        <mount-name><%= mount[:name] %></mount-name>
          <intro><%= mount['intro'] %></intro>
          <dump-file><%= node['icecast']['home'] %>/<%= mount['dump-file'] %></dump-file>

          <authentication type="<%= mount['authentication']['type'] %>">
            <% mount['authentication']['options'].each do |option| %>
              <option name="<%= option['name']%>" value="<%= option['value'] %>"/>
            <% end %>
          </authentication>

          <on-disconnect><%= node['icecast']['home'] %>/disconnect</on-disconnect>
      </mount>
    <% end %>

    <fileserve>1</fileserve>

    <paths>
      <basedir><%= node['icecast']['basedir'] %></basedir>
      <logdir><%= node['icecast']['basedir'] %>/log</logdir>
      <webroot><%= node['icecast']['basedir'] %>/web</webroot>
      <adminroot><%= node['icecast']['basedir'] %>/admin</adminroot>
      <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <!-- <playlistlog>playlist.log</playlistlog> -->
      	<loglevel>3</loglevel> <!-- 4 Debug, 3 Info, 2 Warn, 1 Error -->
      	<logsize>10000</logsize> <!-- Max size of a logfile -->
        <!-- If logarchive is enabled (1), then when logsize is reached
             the logfile will be moved to [error|access|playlist].log.DATESTAMP,
             otherwise it will be moved to [error|access|playlist].log.old.
             Default is non-archive mode (i.e. overwrite)
        -->
        <!-- <logarchive>1</logarchive> -->
    </logging>

    <security>
      <chroot>0</chroot>
      <changeowner>
          <user>icecast</user>
          <group>icecast</group>
      </changeowner>
    </security>
</icecast>
